@model MyWeb.Presentation.Models.DetailViewModel
@{
    ViewBag.Title = "";
}

<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Library</a></li>
            <li class="active">Data</li>
        </ol>
    </div>
</div>
<div class="naomi-article-col col-sm-8">
    <h1 class="headline1 head mg-2" itemprop="headline">@Model.NewsItems.Title</h1>
    <div class="entry-meta">
        <span class="author" href="#">Đăng bởi admin content</span> /
        <span>
            <time class="entry-date published"> @Model.NewsItems.CreatedOnUtc</time>
        </span>
        <a href="#comments" class="glyphicon glyphicon-comment meta-com">0 </a>
    </div>
    <div class="entry-content">
        <div class="naomi-full-entry">
            @Html.Raw(Model.NewsItems.Full)
            @*<ul class="entry-tags glyphicon glyphicon-tags hidden-xs">
                    <li><a href="http://inibot.com/naomi/tag/acting/" rel="tag">Acting</a></li>
                    <li><a href="http://inibot.com/naomi/tag/artists/" rel="tag">Artists</a></li>
                    <li><a href="http://inibot.com/naomi/tag/bands/" rel="tag">Bands</a></li>
                    <li><a href="http://inibot.com/naomi/tag/concerts/" rel="tag">Concerts</a></li>
                    <li><a href="http://inibot.com/naomi/tag/consoles/" rel="tag">Consoles</a></li>
                    <li><a href="http://inibot.com/naomi/tag/projects/" rel="tag">Projects</a></li>
                </ul>*@
        </div>
    </div>
    <nav class="naomi-post-navigation">
        @if (!string.IsNullOrWhiteSpace(Model.NewsItems.PreviousPageSlug))
        {
            <div class="prev-post-button">
                <span class="label-button">&lt; Prev Post</span>
                <a href="/@Model.NewsItems.PreviousPageSlug" rel="prev">@Model.NewsItems.PreviousPageName</a>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.NewsItems.NextPageSlug))
        {
            <div class="next-post-button pull-right">
                <span class="label-button">Next Post &gt;</span>
                <a href="/@Model.NewsItems.NextPageSlug" rel="next">@Model.NewsItems.NextPageName</a>
            </div>

        }
    </nav>
    <h3 class="naomi-pre-title">
        <a href="javascript:void(0)" class="naomi-icon-bubble2 meta-com">@Model.NewsItems.NumberOfComments Bình luận </a>
        <span class="pre-sub"><a class="reveal-comments" href="#respond">Tham gia trò chuyện →</a></span>
    </h3>
    <div class="load-comments">
        <div id="comments" class="comments-area">
            <ol class="comment-list">
                @foreach (var item in Model.Comments)
                {
                    <li id="comment-25" class="comment even thread-even depth-1">
                        <div class="naomi-single-comment">
                            <div class="naomi-gravatar"><img alt="" src="#" class="avatar avatar-80 photo" height="80" width="80"></div><div class="naomi-comment-group">
                                <span class="naomi-ccauthor"><a href="javascript:;" rel="external nofollow" class="url">@item.CustomerName</a></span><p>@item.CommentText</p>
                                <time class="naomi-date" datetime="@item.CreatedOn">@item.CreatedOn</time>
                                <a rel="nofollow" class="comment-reply-link" data-id="@item.ParentId" href="javascript:void(0)" aria-label="Reply to a"><span class="naomi-cc-reply naomi-icon-bubble2">Reply</span></a>
                            </div>
                        </div>
                    </li>
                }
            </ol><!-- .comment-list -->
            <div id="respond" class="comment-respond">
                <h3 id="reply-title" class="comment-reply-title">
                    Leave a Reply <small>
                        <a rel="nofollow" id="cancel-comment-reply-link" href="/naomi/suscipit-ultrices-phasels-facilisis-lacinias/#respond" style="display:none;">Cancel reply</a>
                    </small>
                </h3>
                <div class="notifications">
                    @{
                        var validationSummary = Html.ValidationSummary(true);
                    }
                    @if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
                    {
                        <div class="message-error">@validationSummary</div>
                    }
                    @{
                        var result = TempData["nop.news.addcomment.result"] as string;
                    }
                    @if (!string.IsNullOrEmpty(result))
                    {
                        <div class="result">@result</div>
                    }
                </div>
                @using (Html.BeginForm("NewsCommentAdd", "Home", new { newsId = Model.NewsItems.Id }, FormMethod.Post, new { id = "commentform", @class = "comment-form" }))
                {
                    @Html.AntiForgeryToken()
                    <p class="comment-form-email">
                        @Html.TextBoxFor(m => m.AddNewComment.Email, new { placeholder = "Email" })
                    </p>
                    <p class="comment-form-comment">
                        @Html.TextAreaFor(m => m.AddNewComment.CommentText, new { cols = "45", rows = "8", placeholder = "Comment" })
                    </p>
                    <p class="form-submit">
                        <input name="submit" type="submit" id="submit" class="submit" value="Post Comment">
                        @Html.HiddenFor(m => m.AddNewComment.ParentId)
                    </p>
                }
            </div><!-- #respond -->
        </div><!-- #comments -->
    </div>
</div>
<div class="col-sm-4">
    <div id="secondary" class="widget-area">
        <div class="naomi-widget naomi-wow-fade widget_naomi_fblike" id="naomi_fblike_widget-2">

        </div>
        <div class="naomi-widget naomi-wow-fade widget_naomi_popular_posts">
            <h3 class="naomi-section-title">Bài viết liên quan</h3>
            <ul>
                @foreach (var item in Model.NewsRelates)
                {
                    <li class="popular_list">
                        <img width="150" height="150" src="@item.ImageUrl" class="attachment-thumbnail size-thumbnail wp-post-image" alt="@item.Title">
                        <div class="naomi-item-insider">
                            @*<a title="Total Views" class="meta-count naomi-icon-fire" href="http//inibot.com/naomi/suspendisse-turpis-sagittis-massa-pellentesque-vivamus/  "> 1050</a>*@
                            <h2 class="entry-title">
                                <a href="/@item.Slug" rel="bookmark">@item.Title</a>
                            </h2>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('.load-comments').show();

            $('.naomi-pre-title').click(function () {
                $('.load-comments').toggle("slow");
            });

            $('.comment-reply-link').click(function () {
                var parentId = $(this).attr("data-id");
                console.log(parentId);
                $('#AddNewComment_ParentId').val(parentId);
            });
        });
    </script>
}