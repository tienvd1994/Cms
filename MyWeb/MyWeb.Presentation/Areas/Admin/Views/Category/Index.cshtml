@section scripts{
    <script>
        $(document).ready(function () {
            $("#categories-grid").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("List", "Category"))",
                            type: "POST",
                            dataType: "json",
                            data: additionalData
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "Total",
                        errors: "Errors"
                    },
                    error: function (e) {
                        //display_kendoui_grid_error(e);
                        // Cancel the changes
                        //this.cancelChanges();
                    },
                    pageSize: 15,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                pageable: {
                    refresh: true,
                    pageSizes: [10, 15, 20, 50, 100]
                },
                editable: {
                    confirmation: false,
                    mode: "inline"
                },
                scrollable: false,
                columns: [{
                    field: "Name",
                    title: "Tên",
                    width: 100
                }, {
                    field: "CreatedOnUtc",
                    title: "Thời gian tạo",
                    width: 100,
                    template: "#= kendo.toString(kendo.parseDate(CreatedOnUtc, 'yyyy-MM-dd'), 'dd/MM/yyyy hh:mm') #"
                }, {
                    field: "Id",
                    title: "Sửa",
                    width: 100,
                    template: '<a href="Category/Edit/#=Id#">Sửa</a>'
                }]
            });
        });

    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            //search button
            $('#search-categories').click(function () {
                //search
                var grid = $('#categories-grid').data('kendoGrid');
                grid.dataSource.page(1); //new search. Set page size to 1
                //grid.dataSource.read(); we already loaded the grid above using "page" function
                return false;
            });

            $("#SearchCategoryName").keydown(function (event) {
                if (event.keyCode == 13) {
                    $("#search-categories").click();
                    return false;
                }
            });
        });

        function additionalData() {
            var data = {
                SearchCategoryName: $('#SearchCategoryName').val()
            };

            return data;
        }
    </script>
}